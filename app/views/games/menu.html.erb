<h1>New game</h1>
<div class="letter">
  <%@letters.each do |letter|%>
  <h2><%=letter%></h2>
  <%end%>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters , @letters %>
  <input class="input" type="text" name="new" placeholder="It's my last word Jean-Pierre">
  <input class="btn" type="submit" value="Valid this word">
</form>
